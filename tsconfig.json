{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "preserve",
    "lib": [
      "dom",
      "esnext"
    ],
    "baseUrl": "./src",
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "noUnusedParameters": true,
    "allowJs": true
  },
  "include": [
    "**/src/**/*.ts",
    "**/src/**/*.tsx",
    "test/**/*.ts",
    "**/typings/**/*.ts",
    "**/src/**/*.js",
    "**/cypress/**/*.js",
    "**/gatsby-source-twitter-unfurl/**/*.js",
    "*.js"
  ],
  "exclude": [
    "node_modules",
    "public",
    ".cache",
    "auto-generated"
  ]
}